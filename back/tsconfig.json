{
    "compilerOptions": {
        "rootDir": "src",  
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true, 
    },
    "include": [
    "src/**/*.ts"
    ],
    "exclude": [
    "node_modules"
    ]
}